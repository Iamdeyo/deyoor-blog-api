generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  title  String
  authorId  String? @db.ObjectId
  content   String?
  published Boolean @default(false)
  author    User?   @relation(fields: [authorId], references: [id])
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  name  String?
  posts Post[]
}